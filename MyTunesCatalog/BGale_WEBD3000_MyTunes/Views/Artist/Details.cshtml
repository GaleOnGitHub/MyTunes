@model BGale_WEBD3000_MyTunes.ViewModels.ArtistAlbums
@using PagedList.Mvc;
@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Artist</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.artist.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.artist.Name)
        </dd>
        <dd><br /></dd>
        <dd>
            <table class="table">
                <tr>
                    <th>Title</th>
                </tr>
                @foreach (var item in Model.albums)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                    </tr>
                }
            </table>
            <br />
            Page @(Model.albums.PageCount < Model.albums.PageNumber ? 0 : Model.albums.PageNumber) of @Model.albums.PageCount

            @Html.PagedListPager(Model.albums, page => Url.Action("Details",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.artist.ArtistId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
